  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\TensorflowBinariesBuildTask.Core\TensorflowBinariesBuildTask.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\src\runtimes\python36.dll">
